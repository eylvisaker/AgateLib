<Project name="ResourceEditor" path="../Tools/ResourceEditor" language="C#" type="WinExe" frameworkVersion="v3_5">
  <Configuration name="Debug">
    <Options>
      <OutputPath>../../Binaries/Debug/Tools/ResourceEditor</OutputPath>
    </Options>
  </Configuration>

  <Configuration name="Release">
    <Options>
      <OutputPath>../../Binaries/Release/Tools/ResourceEditor</OutputPath>
    </Options>
  </Configuration>

  <Reference name="AgateLib" localCopy="true"/>
  <Reference name="AgateDrawing" localCopy="true"/>
  <Reference name="AgateLib.WinForms" localCopy="true"/>
  <Reference name="NotebookLib" localCopy="true"/>
  <Reference name="System"/>
  <Reference name="System.Core"/>
  <Reference name="System.Data"/>
  <Reference name="System.Drawing"/>
  <Reference name="System.Windows.Forms"/>
  <Reference name="System.Xml"/>

  <Files>
    <Match path="." pattern="*.cs" recurse="true"/>
    <Match path="." pattern="*.resx" recurse="true"/>
    <Match path="./Resources" pattern="*.png" buildAction="None"/>
  </Files>
</Project>
