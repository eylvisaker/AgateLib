<Project name="ResourceEditor" path="../Tools/ResourceEditor" language="C#" type="WinExe">
  <Configuration name="Debug">
    <Options>
      <OutputPath>../../Binaries/Debug/Tools</OutputPath>
    </Options>
  </Configuration>

  <Configuration name="Release">
    <Options>
      <OutputPath>../../Binaries/Release/Tools</OutputPath>
    </Options>
  </Configuration>

  <Reference name="AgateLib"/>
  <Reference name="AgateDrawing"/>
  <Reference name="AgateWinForms"/>
  <Reference name="NotebookLib"/>
  <Reference name="System"/>
  <Reference name="System.Data"/>
  <Reference name="System.Drawing"/>
  <Reference name="System.Windows.Forms"/>
  <Reference name="System.Xml"/>

  <Files>
    <Match path="." pattern="*.cs" recurse="true"/>
    <Match path="." pattern="*.resx" recurse="true"/>
  </Files>
</Project>
