<Project name="FontCreator" path="../Tools/FontCreator" language="C#" type="WinExe">
  <Configuration name="Debug">
    <Options>
	    <OutputPath>../../Binaries/Debug/Tools/FontCreator</OutputPath>
    </Options>
  </Configuration>

  <Configuration name="Release">
    <Options>
      <OutputPath>../../Binaries/Release/Tools/FontCreator</OutputPath>
    </Options>
  </Configuration>

  <Reference name="AgateLib" localCopy="true"/>
  <Reference name="AgateLib.WinForms" localCopy="true"/>
  <Reference name="System"/>
  <Reference name="System.Data"/>
  <Reference name="System.Drawing"/>
  <Reference name="System.Windows.Forms"/>
  <Reference name="System.Xml"/>

  <Files>
    <File buildAction="None" subType="Settings">Properties/Settings.settings</File>
    <Match path="." pattern="*.cs" recurse="true"/>
    <Match path="." pattern="*.resx" recurse="true"/>
    <Match path="./images" pattern="*.png" recurse="true" buildAction="None" copyToOutput="Always" />
  </Files>
</Project>
