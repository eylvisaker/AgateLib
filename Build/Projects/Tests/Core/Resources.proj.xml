  <Reference name="System.Xml"/>

  <Files>
    <File buildAction="None" copyToOutput="Always">TestResourceFile.xml</File>
    <Match path="." pattern="*.cs" recurse="true"/>
    <Match path="." pattern="*.png" recurse="true" buildAction="None" copyToOutput="Always"/>
  </Files>
</Project>
