    <Options>
      <OutputPath>../../../Binaries/Debug/Tests</OutputPath>
    </Options>
  </Configuration>

  <Configuration name="Release">
    <Options>
      <OutputPath>../../../Binaries/Release/Tests</OutputPath>
    </Options>
  </Configuration>

  <Reference name="AgateLib" localCopy="true"/>
